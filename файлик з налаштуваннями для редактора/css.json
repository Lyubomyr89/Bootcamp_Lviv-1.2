{
	// Place your snippets for css here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	"media min-max": {
		"prefix": "md",
		"body": [
			"@media (min-width: $1px) and (max-width: $2px){",
			"$0",
			"}"
		],
		"description": "Область дії стилів від мінімального до максимального значення"
	},
	"media min": {
		"prefix": "minw",
		"body": [
			"@media (min-width: $1px){",
			"$0",
			"}"
		],
		"description": ""
	},
	"media max": {
		"prefix": "maxw",
		"body": [
			"@media (max-width: $1px){",
			"$0",
			"}"
		],
		"description": ""
	},
	"transition": {
		"prefix": "tr",
		"body": [
			"transition: .3s all linear;$0"
		],
		"description": ""
	},
	"box-shadow": {
		"prefix": "bs",
		"body": [
			"box-shadow: 2px 2px 3px 0px rgba(0,0,0,0.75);",
			"$0"
		],
		"description": ""
	},

	"border": {
		"prefix": "br",
		"body": [
			"border: 1px solid red;$0"
		],
		"description": ""
	},

	"border-radius": {
		"prefix": "br",
		"body": [
			"border-radius: 50%;$0"
		],
		"description": ""
	},

	"transform: translate(-50%, -50%)": {
		"prefix": "trtc",
		"body": [
			"transform: translate(-50%, -50%);$0"
		],
		"description": ""
	},

	"transform: translateX": {
		"prefix": "trtx",
		"body": [
			"transform: translateX(-50%);$0"
		],
		"description": ""
	},

	"transform: translateY": {
		"prefix": "trty",
		"body": [
			"transform: translateY(-50%);$0"
		],
		"description": ""
	},

	"position: absolute": {
		"prefix": "pac",
		"body": [
			"position: absolute;",
			"left: 50%;",
			"top: 50%;$0"
		],
		"description": ""
	},

	"position: absolute 0": {
		"prefix": "patl0",
		"body": [
			"position: absolute;",
			"left: 0;",
			"top: 0;$0"
		],
		"description": ""
	},


	"not last": {
		"prefix": "nls",
		"body": [
			"$1:not(:last-child) {",
				"$0",
			"}"
		],
		"description": ""
	},

	"css null": {
		"prefix": "reset",
		"body": [
			"html,",
			"body {",
			  "font-size: 16px;",
			  "background-color: #ffffff;",
			"}",
			
			"*,",
			"*::before,",
			"*::after {",
			  "margin: 0;",
			  "padding: 0;",
			  "box-sizing: border-box;",
			"}",
			
			"ul {",
			  "list-style: none;",
			"}",
			
			"button,",
			"input,",
			"textarea,",
			"section,",
			"option {",
			  "outline: none;",
			"}",
			
			"button {",
			  "display: block;",
			  "border: none;",
			  "background: none;",
			"}",
			
			"img{",
			"display: block;",
			"max-width: 100%;",
			"height: auto;",
			"}",

			"a{",
				"display: inline-block;",
				"text-decoration: none;",
			  "}",


			"$0"
		],
		"description": ""
	},
}